#include <stdio.h>
#include <stdlib.h>
#include <cs50.h>

#include "bmp.h"

int main(int argc, char *argv[])
{
    // ensure proper usage
    if (argc != 4)
    {
        fprintf(stderr, "Usage: ./resize n infile outfile\n");
        return 1;
    }

    // remember filenames
    char *infile = argv[2];
    char *outfile = argv[3];

    int flag = 1;
    // Checks if the argument is completely numeric
    for (int i = 0; argv[1][i] != '\0'; i++)
    {
        if (argv[1][i] < 48 || argv[1][i] > 57)
        {
            flag = 0;
            break;
        }
    }
    if (flag == 0)
    {
        printf("Invalid n!\n");
        return 1;
    }

    int n = atoi(argv[1]);
    if (n < 0 || n > 100)
    {
        printf("Invalid n!\n");
        return 1;
    }

    // open input file
    FILE *inptr = fopen(infile, "r");
    if (inptr == NULL)
    {
        fprintf(stderr, "Could not open %s.\n", infile);
        return 2;
    }

    // open output file
    FILE *outptr = fopen(outfile, "w");
    if (outptr == NULL)
    {
        fclose(inptr);
        fprintf(stderr, "Could not create %s.\n", outfile);
        return 3;
    }

    // read infile's BITMAPFILEHEADER
    BITMAPFILEHEADER bf;
    fread(&bf, sizeof(BITMAPFILEHEADER), 1, inptr);

    // read infile's BITMAPINFOHEADER
    BITMAPINFOHEADER bi;
    fread(&bi, sizeof(BITMAPINFOHEADER), 1, inptr);

    // ensure infile is (likely) a 24-bit uncompressed BMP 4.0
    if (bf.bfType != 0x4d42 || bf.bfOffBits != 54 || bi.biSize != 40 ||
        bi.biBitCount != 24 || bi.biCompression != 0)
    {
        fclose(outptr);
        fclose(inptr);
        fprintf(stderr, "Unsupported file format.\n");
        return 4;
    }

    int padding_in = (4 - (bi.biWidth * sizeof(RGBTRIPLE)) % 4) % 4;
    long biWidth_in = bi.biWidth;
    long biHeight_in = abs(bi.biHeight);
    bi.biWidth *= n;
    bi.biHeight *= n;
    // determine padding for scanlines
    int padding_out = (4 - (bi.biWidth * sizeof(RGBTRIPLE)) % 4) % 4;
    bi.biSizeImage = ((sizeof(RGBTRIPLE) * bi.biWidth) + padding_out) * abs(bi.biHeight);
    bf.bfSize = bi.biSizeImage + sizeof(BITMAPFILEHEADER) + sizeof(BITMAPINFOHEADER);

    // write outfile's BITMAPFILEHEADER
    fwrite(&bf, sizeof(BITMAPFILEHEADER), 1, outptr);

    // write outfile's BITMAPINFOHEADER
    fwrite(&bi, sizeof(BITMAPINFOHEADER), 1, outptr);

    // iterate over infile's scanlines
    for (int i = 0; i < biHeight_in; i++)
    {
        // iterate over pixels in scanline
        // temporary storage
        RGBTRIPLE triple, t[30];
        for (int j = 0; j < biWidth_in; j++)
        {
            // read RGB triple from infile
            fread(&triple, sizeof(RGBTRIPLE), 1, inptr);
            for (int b = 0; b < n; b++)
            {
                // write RGB triple to outfile n times
                //fwrite(&triple, sizeof(RGBTRIPLE), 1, outptr);
                t[n * j + b] = triple;

            }
        }
        fseek(inptr, padding_in, SEEK_CUR);
        for (int a = 0; a < n; a++)
        {
            for (int c = 0; c < biWidth_in * n; c++)
            {
                fwrite(&t[c], sizeof(RGBTRIPLE), 1, outptr);
            }

            // skip over padding, if any
            // then add it back (to demonstrate how)
            for (int k = 0; k < padding_out; k++)
            {
                fputc(0x00, outptr);
            }
        }
    }

    // close infile
    fclose(inptr);

    // close outfile
    fclose(outptr);

    // success
    return 0;
}
